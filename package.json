{
    "name": "impulse-blitz",
    "version": "1.0.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build && electron-builder",
        "preview": "vite preview",
        "start": "electron ."
    },
    "dependencies": {
        "axios": "^1.13.5",
        "dotenv": "^16.4.5",
        "electron-updater": "^6.8.3"
    },
    "devDependencies": {
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3",
        "typescript": "^5.4.5",
        "vite": "^5.2.11",
        "vite-plugin-electron": "^0.28.6",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.impulse.app",
        "productName": "Impulse",
        "directories": {
            "output": "release",
            "buildResources": "public"
        },
        "icon": "public/logo.png",
        "extraResources": [
            ".env",
            "src/.env"
        ],
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "yosuke-wtf",
                "repo": "impulse-app"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "public/logo.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        }
    }
}